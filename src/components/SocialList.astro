---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
	emoji: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/gndps",
		name: "mdi:github",
	},
	{
		friendlyName: "Huggingface",
		link: "https://huggingface.co/gundeep",
		emoji: "ðŸ¤—",
	},
];
---

<div class="flex flex-wrap items-end gap-x-2">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name, emoji }) => (
				<li class="flex">
					<a
						class="inline-block p-1 sm:hover:text-link"
						href={link}
						rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						{name && <Icon aria-hidden="true" className="h-6 w-6" focusable="false" name={name} />}
						{emoji && <span aria-hidden="true" className="h-6 w-6" focusable="false">{emoji}</span>}
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
